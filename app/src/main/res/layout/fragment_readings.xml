<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcs.enosenew.ReadingsFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/linearLayoutreadings">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Readings"
        android:layout_marginTop="20dp"
        android:id="@+id/readingstitle"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Smell = 0.0"
        android:id="@+id/sensor1"
        android:paddingLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Solvent Vapour = 0.0"
        android:id="@+id/sensor2"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hydrogen Compunds = 0.0"
        android:paddingLeft="15dp"
        android:id="@+id/sensor3"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Methane Compounds = 0.0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sensor4"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature = 0 C"
        android:paddingLeft="15dp"
        android:id="@+id/temp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result = 0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/result"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />
-->
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />

</LinearLayout>
